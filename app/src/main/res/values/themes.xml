<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoTitan" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
      <item name="colorPrimary">@color/button_color</item>
      <item name="colorPrimaryDark">@color/button_color</item>
      <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.ToDoTitan" parent="Base.Theme.ToDoTitan" />

    <style name="BottomSheetDialogTheme"  parent="Theme.Design.Light.BottomSheetDialog">
        <item name="expanded">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetBG</item>
    </style>
    <style name="BottomSheetBG" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_white_top_rounded</item>
    </style>
</resources>